<!DOCTYPE html>
<html>
  <head>
    <title>Maintenance Management</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse"
              data-target="#top-navbar-collapse">
                <span class="sr-only">Toggle Navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            <%= link_to "Home", {controller: "home", action: "index"}, class: "navbar-brand" %>
            </div>
            <div class="collapse navbar-collapse" id="top-navbar-collapse">
              <ul class="nav navbar-nav">
                <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Systems <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><a href="/systems/index">Manage Systems</a></li>
                    <li><a href="/systems/new">Add New Systems</a></li>
                  </ul>
                </li>
                <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Parts <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Manage Parts", parts_path %></li>
                    <li><%= link_to "Add New Parts", new_part_path %></li>
                  </ul>
                </li>
                <li class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Technician <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Manage Technicians", technicians_path %></li>
                    <li><%= link_to "Add New Technicians", new_technician_path %></li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    <main class="container-fluid">
    <%= yield %>
    </main>
    </div>
  </body>
</html>
