<%= form_for :system, url: systems_path do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :family %>
    <%= f.text_field :family %>

    <%= f.label :part_number %>
    <%= f.text_field :part_number %>
    <%= f.label :serial_number %>
    <%= f.text_field :serial_number %>

    <%= f.label :vendor_id %>
    <%= f.text_field :vendor_id %>

    <%= f.label :install_date %>
    <%= f.date_field :install_date %>

    <%= f.label :cost %>
    <%= f.number_field :cost, step: 0.01 %>

    <%= f.submit %>
<% end %>
  </div>
