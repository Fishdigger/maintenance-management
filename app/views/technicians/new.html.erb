<h1 class="text-center display-3">Add New Technician</h1>
<div class="container-fluid">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for :technician, url: technicians_path do |f| %>
      <div class="form-group">
        <%= f.label :name, :class => "control-label" %>
        <%= f.text_field :name, :class => "form-control" %>

        <%= f.label :employee_number, :class => "control-label" %>
        <%= f.text_field :employee_number, :class => "form-control" %>

        <%= f.label :payrate, :class => "control-label" %>
        <%= f.number_field :payrate, :class => "form-control", :step => 0.01 %>
      </div>

      <div class="form-group">
        <%= f.label :location, :class => "control-label" %>
        <%= f.text_field :location, :class => "form-control" %>

        <%= f.label :role, :class => "control-label" %>
        <%= f.text_field :role, :class => "form-control" %>
      </div>
      <%= f.submit "Save Technician", :class => "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>
