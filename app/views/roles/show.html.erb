<div class="col-md-4 col-md-offset-4">
  <p class="text-center"><strong>Name: </strong><%= @role.name %></p>
  <p class="text-center">
    <%= link_to "Done", roles_path, class: "btn btn-success" %>
    <%= link_to "Edit", edit_role_path, class: "btn btn-info" %>
    <%= link_to "Add Another Role", new_role_path, class: "btn btn-primary" %>
    <%= link_to "DELETE", role_path(@role.id), method: :delete,
      data: {confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </p>
</div>
