<div class="col-md-8 col-md-offset-2">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.name, role_path(role) %></td>
        <td><%= link_to "Edit", edit_role_path(role), class: "btn btn-info" %></td>
        <td><%= link_to "DELETE", role_path(role), method: :delete,
          data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <p class="text-center">
    <%= link_to "Add New Role", new_role_path, class: "btn btn-primary" %>
  </p>
</div>
