<h1 class="text-center display-3">Edit Part <%= @part.name %></h1>
<div class="container-fluid">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for @part do |f| %>
      <div class="form-group">
        <%= f.label :name, :class => "control-label" %>
        <%= f.text_field :name, :value => @part.name, :class => "form-control" %>

        <%= f.label :part_number, :class => "control-label" %>
        <%= f.text_field :part_number, :value => @part.part_number, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :unit_of_issue, :class => "control-label" %>
        <%= f.text_field :unit_of_issue, :value => @part.unit_of_issue, :class => "form-control" %>

        <%= f.label :on_hand, :class => "control-label" %>
        <%= f.number_field :on_hand, :value => @part.on_hand, :class => "form-control" %>

        <%= f.label :threshold, :class => "control-label" %>
        <%= f.number_field :threshold, :value => @part.threshold, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :order_url, :class => "control-label" %>
        <%= f.text_field :order_url, :value => @part.order_url, :class => "form-control" %>

        <%= f.label :cost, :class => "control-label" %>
        <%= f.number_field :cost, :value => @part.cost, :class => "form-control", :step => 0.01 %>

        <%= f.label :vendor_id, :class => "control-label" %>
        <%= f.number_field :vendor_id, :value => @part.vendor_id, :class => "form-control" %>
      </div>
      <%= f.submit "Save Part", :class => "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>
