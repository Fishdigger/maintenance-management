<h1 class="text-center display-3">Add New Location</h1>
<div class="container-fluid">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for :location, url: locations_path do |f| %>

      <div class="form-group">
        <%= f.label :nickname, :class => "control-label" %>
        <%= f.text_field :nickname, :class => "form-control" %>
        
        <%= f.label :street, :class => "control-label" %>
        <%= f.text_field :street, :class => "form-control" %>

        <%= f.label :city, :class => "control-label" %>
        <%= f.text_field :city, :class => "form-control" %>

        <%= f.label :state, :class => "control-label" %>
        <%= f.text_field :state, :class => "form-control" %>

        <%= f.label :zip, :class => "control-label" %>
        <%= f.text_field :zip, :class => "form-control" %>
      </div>

      <%= f.submit "Save Location", :class => "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>
