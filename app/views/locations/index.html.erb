<div class="col-md-8 col-md-offset-2">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nickname</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= link_to location.nickname, location_path(location) %></td>
          <td><%= location.street %></td>
          <td><%= location.city %></td>
          <td><%= location.state %></td>
          <td><%= location.zip %></td>
          <td><%= link_to "Edit", edit_location_path(location), class: "btn btn-info" %></td>
          <td><%= link_to "Delete", location_path(location), method: :delete,
            data: { confirm: "Are you sure? " }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p class="text-center">
    <%= link_to "Add New Location", new_location_path, class: "btn btn-primary" %>
  </p>
</div>
